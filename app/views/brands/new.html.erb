<h1>Add A Brand:</h1>

<%= render partial: "layouts/error", locals: { object: @brand } %>

<%= form_for(@brand) do |f| %>
    <%= render partial: "form", locals: { bp: f } %>
    <h3>Add Cars:</h3>
    <%= f.fields_for :car do |c| %>
        <%= c.label :year %>
        <%= c.number_field :year %><br>
        <%= c.label :model %>
        <%= c.text_field :model %><br>
        <%= c.label :color %>
        <%= c.text_field :color %><br>
        <% end %>
        <h3>Which country is the brand from?</h3>
        <p>Select an existing Country:</p>
        <%= f.collection_select :country_id, Country.all, :id, :name %><br>
        <p>or create a new country below:</p>
        <%= f.fields_for :country do |d| %>
           <%= d.label :name %>
           <%= d.text_field :name %><br>
           <% end %>
        <br>
    <%= f.submit %>
<% end %>