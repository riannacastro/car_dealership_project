<h1>Edit A Brand:</h1>

<%= render partial: "layouts/error", locals: { object: @brand } %> 

<%= form_for(@brand) do |f| %>
    <%= render partial: "form", locals: { bp: f } %>
    <h3>Add Cars:</h3>
    <%= f.fields_for :car do |c| %>
        <%= c.label :year %>
        <%= c.number_field :year %><br>
        <%= c.label :model %>
        <%= c.text_field :model %><br>
        <%= c.label :color %>
        <%= c.text_field :color %><br>
        <% end %>
        <h3>Which country is the brand from?</h3>
        <%= f.collection_select :country_id, Country.all, :id, :name %>
        <%= f.fields_for :countries do |d| %>
           <%= d.label :name %>
           <%= d.text_field :name %>
           <% end %>
        <br>
    <%= f.submit %>
<% end %>